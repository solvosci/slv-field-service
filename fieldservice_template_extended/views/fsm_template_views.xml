<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_fsm_template_extended_form" model="ir.ui.view">
        <field name="name">fsm.template.form (in fieldservice_template_extended)</field>
        <field name="model">fsm.template</field>
        <field name="inherit_id" ref="fieldservice.fsm_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='instructions_page']" position="after">
                <page string="Collaborator Instructions" name="collaborator_instructions_page">
                    <field name="collaborator_instructions" nolabel="1" />
                </page>
            </xpath>
        </field>
    </record>

</odoo>
