<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_fsm_person_form_extended" model="ir.ui.view">
        <field name="name">fsm.person (FSM Person Extended)</field>
        <field name="model">fsm.person</field>
        <field name="inherit_id" ref="fieldservice.fsm_person_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='calendar_id']" position="after">
                <field name="vat" />
                <field name="acc_number" />
            </xpath>
        </field>
    </record>
  
</odoo>
